{
  "manifest_version": 3,
  "name": "LeetMon",
  "version": "1.0",
  "description": "Do leetcode problems, catch pokemon!",
  "icons": {
    "128": "assets/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://www.google.com/"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}